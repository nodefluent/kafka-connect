    },
    "homepage": "https://github.com/nodefluent/kafka-connect#readme",
    "dependencies": {
        "async": "^2.4.1",
        "bluebird": "^3.5.0",
        "body-parser": "^1.17.2",
        "express": "^4.15.4",
        "prom-client": "^10.0.3",
        "sinek": "^6.1.1"
    },
    "devDependencies": {
        "coveralls": "^3.0.0",
